<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.techotakus.metal</id>
    <name>Metal Shader Language Support</name>
    <vendor>TECH OTAKUS</vendor>
    <icon>pluginIcon.svg</icon>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.ultimate</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- language 属性使用小写 ID "metal"，与 MetalLanguage 一致 -->
        <fileType name="Metal"
                  implementationClass="org.techotakus.metal.MetalFileType"
                  fieldName="INSTANCE"
                  language="metal"
                  extensions="metal"/>
        <lang.syntaxHighlighterFactory language="metal"
                                       implementationClass="org.techotakus.metal.MetalSyntaxHighlighterFactory"/>
        <lang.parserDefinition language="metal"
                               implementationClass="org.techotakus.metal.MetalParserDefinition"/>
        
        <!-- JetBrains Official LSP API -->
        <platform.lsp.serverSupportProvider
                implementation="org.techotakus.metal.lsp.MetalLspServerSupportProvider"/>
    </extensions>
</idea-plugin>
